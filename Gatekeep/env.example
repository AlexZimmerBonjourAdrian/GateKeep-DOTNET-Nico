# ==============================================
# AWS - Credenciales y Configuración
# ==============================================
AWS_ACCESS_KEY_ID=tu_access_key_id_aqui
AWS_SECRET_ACCESS_KEY=tu_secret_access_key_aqui
AWS_REGION=sa-east-1

# ==============================================
# ECR - Repositorios de Imágenes Docker
# ==============================================
ECR_API_REPOSITORY=126588786097.dkr.ecr.sa-east-1.amazonaws.com/gatekeep-api
ECR_FRONTEND_REPOSITORY=126588786097.dkr.ecr.sa-east-1.amazonaws.com/gatekeep-frontend

# ==============================================
# ECS - Configuración de Servicios
# ==============================================
ECS_CLUSTER_NAME=gatekeep-cluster
ECS_SERVICE_NAME_API=gatekeep-api-service
ECS_SERVICE_NAME_FRONTEND=gatekeep-frontend-service

# ==============================================
# Base de Datos PostgreSQL - Para Migraciones
# ==============================================
DB_HOST=tu_host_rds_aqui
DB_PORT=5432
DB_NAME=Gatekeep
DB_USER=postgres
DB_PASSWORD=tu_password_aqui

# ==============================================
# MongoDB - Base de Datos de Documentos
# ==============================================
MONGODB_CONNECTION=mongodb+srv://usuario:password@cluster.mongodb.net/?appName=GateKeepMongo
MONGODB_DATABASE=GateKeepMongo
MONGODB_USE_STABLE_API=true

# ==============================================
# Redis - Sistema de Cache (Opcional)
# ==============================================
REDIS_CONNECTION=tu_redis_endpoint_aqui:6379
REDIS_INSTANCE=GateKeep:
REDIS_ENABLED=false

# ==============================================
# Aplicación - Configuración General
# ==============================================
PROJECT_NAME=gatekeep
ENVIRONMENT=Production
GATEKEEP_PORT=5011

# ==============================================
# JWT - Autenticación y Tokens
# ==============================================
JWT_KEY=tu_jwt_key_secreta_aqui_minimo_256_bits
JWT_ISSUER=GateKeep
JWT_AUDIENCE=GateKeepUsers
JWT_EXPIRATION_HOURS=8

# ==============================================
# Configuración de Despliegue
# ==============================================
# Si es true, ejecuta migraciones antes del deployment
RUN_MIGRATIONS=true

# Si es true, actualiza variables de entorno en ECS
UPDATE_ENV_VARS=true

# Si es true, despliega también el frontend
DEPLOY_FRONTEND=true

# Timeout en minutos para esperar el deployment
DEPLOYMENT_TIMEOUT_MINUTES=15

